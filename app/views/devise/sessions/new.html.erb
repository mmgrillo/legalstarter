<div class="container" style="margin-top: 2em;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-1">
      <div class="signup-box">

        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: true, class: "devise-placeholders" %>
          </div><br>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder: true, class: "devise-placeholders" %>
          </div><br>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Login", class: "btn btn-success btn-md" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

     </div>
    </div>
  </div>
</div>
