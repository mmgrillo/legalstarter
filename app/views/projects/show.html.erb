

<div class="project-intro">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<h2 class="project-title"><%= @project.name %></h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-8">
				<%= link_to image_tag(@project.image_url, alt: @project.name, width: '90%'), project_path(@project) %>
			</div>
			<div class="col-md-4">
				<div class="project-mgmt">
					<% if user_signed_in? %> 
						<%= link_to 'Edit', edit_project_path(@project) %>
						<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: "Are you sure?"} %>	
					<% end %>
				</div>
				<%= render 'stats' %>
				<%= link_to 'See Project Volunteers', "#", class: "btn btn-success btn-lg" %>
				<%= link_to 'Associação Salvador', "#", class: "btn btn-success btn-lg button-margin" %>
				<p class="project-time">This project will expire in 3 days.</p>
			</div>
		</div>

		<!-- small description -->
		<div clas="row">
			<div class="col-md-8">
				<p class="project-small-description">Project small description.</p>
			</div>
		</div>

	</div>
</div>




